extends layout

block content
    .col-md-4.col-md-offset-4.text-center
        h2 Añadir películas
        .col-xs-12(style='height:14px;')
        form.form-horizontal(role='form')
            .form-group
                label.control-label.col-sm-2(for='nombre') Nombre:
                .col-sm-10
                    input#nombre.form-control(type='text')
            .form-group
                label.control-label.col-sm-2(for='director') Director:
                .col-sm-10
                    input#director.form-control(type='text')
            .form-group
                label.control-label.col-sm-2(for='anio') Año:
                .col-sm-10
                    input#anio.form-control(type='text')
            .form-group
                label.control-label.col-sm-2(for='genero') Género:
                .col-sm-10
                    input#genero.form-control(type='text')
            .form-group
                .col-sm-offset-2.col-sm-10
                    button.btn.btn-default(type='submit') Crear
